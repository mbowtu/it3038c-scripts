from PIL import Image
#Open image using Image module
#image should be in the same directory as the python script file being run 
im = Image.open("name of the image.jpg")

#Show actual Image
im.show()

#Show rotated Image
im = im.rotate(45)
im.show()
#Save image
im.save('newName.png')

#flips the image vertically
im.transpose(Image.FLIP_TOP_BOTTOM)

# flips image horizontally
im.transpose(Image.FLIP_LEFT_RIGHT)

#creating thumbnails
im.thumbnail((200, 200))
#to resize image
im = im.resize((426, 240))

#change color to gray
gray_im = im.convert('L')
gray_im.show()

#To use Filter,
from PIL import Image, ImageFilter
