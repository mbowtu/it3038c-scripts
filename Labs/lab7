#Open image using Image module
#Image should be in the same directory as the python script file being run 

from PIL import Image
img = Image.open('name of the image.png') #initiat

#Show the Image
img.show()

#Show rotated Image
img = image.rotate(45)
img.show()
img.save('newName.png') #Save image

#flips the image vertically
img.transpose(Image.FLIP_TOP_BOTTOM)

# flips image horizontally
img.transpose(Image.FLIP_LEFT_RIGHT)

#creating thumbnails
img.thumbnail((200, 200))

#change color to gray
gray_img = img.convert('L')
gray_img.show()


